$blue1 = #3f69ff
$blue2 = #4e78ff

$global = 'Lato', sans-serif

*:focus, a:focus, button:focus
	outline none

body
	color black
	font-family $global
	font-size 16px
	font-weight 400
	text-rendering optimizeLegibility
    -webkit-font-smoothing antialiased

h1, h2, h3, h4, h5, h6
	font-family $global
	font-weight 700

.display-4
	font-size 2.5rem

a
	color $blue2

a:hover, a:active, a:focus
	color $blue2

//Navbar
.bg-navbar
	background-color $blue1

.navbar-dark .navbar-nav .nav-link
	color white

.navbar-dark .navbar-nav .nav-link:hover
	color white

.navbar-dark .navbar-nav .nav-link:focus
	color white

//Header
.__Header
	background linear-gradient(to right bottom,#f3f3f4 50%,#fff 50%)
	border-radius 0rem
	color black

.__btnHeader
	background-color $blue1
	border-color $blue1
	color white
	transition .2s
	&:active
		background-color $blue2
		border-color $blue2
		color white
		transform scale(.9)
	&:focus
		background-color $blue2
		border-color $blue2
		color white
	&:hover
		background-color $blue2
		border-color $blue2
		box-shadow 0 2px 13px 0 $blue1
		color white

.__Avatar
	border-radius 50%
	filter grayscale(100%)

.__Social i
	font-size 1.8rem